node('master') 
{
    stage('ContinuousDownload') 
    {
        git 'https://github.com/Pramodh003/maven.git'
    }
    stage('ContinuousBuild')
    {
        sh 'mvn package'
    }
    stage('ContinuousDeployment')
    {
        sh 'scp /home/ubuntu/.jenkins/workspace/pipelineview/webapp/target/webapp.war ubuntu@172.31.46.231:/var/lib/tomcat8/webapps/testenv.war'
    }
    stage('ContinuousTesting')
    {
        git 'https://github.com/Pramodh003/Functional-Testing.git'
        sh 'java -jar /home/ubuntu/.jenkins/workspace/pipelineview/testing.jar'
    }
    stage('ContinuousDelivery')
    {
        sh 'scp /home/ubuntu/.jenkins/workspace/pipelineview/webapp/target/webapp.war ubuntu@172.31.33.149:/var/lib/tomcat8/webapps/testenv.war'
    }
}

